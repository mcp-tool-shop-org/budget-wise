<Page
    x:Class="BudgetWise.App.Views.Reconciliation.ReconciliationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24" RowDefinitions="Auto,Auto,Auto,*" RowSpacing="12">
        <TextBlock Text="Reconcile" FontSize="28" FontWeight="SemiBold" />

        <InfoBar Grid.Row="1"
            IsOpen="True"
            IsClosable="False"
            Severity="Warning"
            Title="No accounts found"
            Message="Starter data should be created on first launch. If this still shows, restart the app or open Diagnostics."
            Visibility="{Binding Accounts, Converter={StaticResource CollectionEmptyToVisibilityConverter}}" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,48,0,0">
            <ComboBox Width="260"
                      ItemsSource="{Binding Accounts}"
                      SelectedItem="{Binding SelectedAccount, Mode=TwoWay}"
                      DisplayMemberPath="Name"
                      PlaceholderText="Select account" />

            <DatePicker Date="{Binding StatementDate, Mode=TwoWay}" />

            <TextBox Width="180"
                     Header="Statement ending balance"
                     Text="{Binding StatementEndingBalanceText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <CheckBox Content="Create adjustment"
                      VerticalAlignment="Bottom"
                      ToolTipService.ToolTip="If needed, creates a balancing adjustment transaction so the account matches the statement."
                      IsChecked="{Binding CreateAdjustmentIfNeeded, Mode=TwoWay}" />

                <Button Content="Reconcile"
                    VerticalAlignment="Bottom"
                    Click="Reconcile_Click" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8">
            <TextBlock Text="{Binding StatementYearMonthText}" Opacity="0.8" />
            <Button Content="Refresh" Command="{Binding RefreshCommand}" />
            <Button Content="Select all" Command="{Binding SelectAllCommand}" />
            <Button Content="Select none" Command="{Binding SelectNoneCommand}" />
        </StackPanel>

        <StackPanel Grid.Row="3" Spacing="8">
            <ProgressBar IsIndeterminate="True"
                         Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock Text="{Binding ErrorText}"
                       Foreground="Tomato"
                       TextWrapping="Wrap"
                       Visibility="{Binding ErrorText, Converter={StaticResource StringToVisibilityConverter}}" />

            <TextBlock Text="{Binding ResultText}"
                       TextWrapping="Wrap"
                       Visibility="{Binding ResultText, Converter={StaticResource StringToVisibilityConverter}}" />

            <ListView ItemsSource="{Binding Transactions}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="36,90,*,120,90" ColumnSpacing="12" Padding="4">
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1" Text="{Binding Date}" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="2" Text="{Binding Payee}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Column="3" Text="{Binding AmountText}" VerticalAlignment="Center" HorizontalAlignment="Right" />
                            <TextBlock Grid.Column="4" Text="{Binding ClearedText}" VerticalAlignment="Center" Opacity="0.8" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <ContentDialog x:Name="ConfirmReconcileDialog"
                       Title="Finish reconciliation?"
                       PrimaryButtonText="Reconcile"
                       CloseButtonText="Cancel"
                       DefaultButton="Primary">
            <TextBlock x:Name="ConfirmReconcileDialogText" TextWrapping="Wrap" />
        </ContentDialog>
    </Grid>
</Page>
