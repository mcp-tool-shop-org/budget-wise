<Application
    x:Class="NextLedger.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:NextLedger.App.Converters"
    xmlns:local="using:NextLedger.App">

    <Application.Resources>
        <ResourceDictionary>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:CollectionEmptyToVisibilityConverter x:Key="CollectionEmptyToVisibilityConverter" />
            <converters:CollectionNotEmptyToVisibilityConverter x:Key="CollectionNotEmptyToVisibilityConverter" />
            <converters:MoneyToFormattedStringConverter x:Key="MoneyToFormattedStringConverter" />
            <converters:DateOnlyToIsoStringConverter x:Key="DateOnlyToIsoStringConverter" />
            <converters:OverspentToBrushConverter x:Key="OverspentToBrushConverter" />
            <converters:BoolToOnOffBudgetConverter x:Key="BoolToOnOffBudgetConverter" />
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
